<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@drawable/mainbg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logosSignUp"
            android:layout_width="149dp"
            android:layout_height="123dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@mipmap/recipe" />

        <EditText
            android:id="@+id/etemailSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logosSignUp"
            android:layout_marginTop="50dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_mail_outline_black_24dp"
            android:maxLines="1" />

        <EditText
            android:id="@+id/etpassSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etemailSignUp"
            android:layout_marginTop="13dp"
            android:focusableInTouchMode="true"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_lock_outline_black_24dp"
            android:maxLines="1" />

        <Button
            android:id="@+id/registerSignUp"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@+id/etpassSignUp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Register"
            android:background="@drawable/btn_shape"
            android:textColor="@color/gray"/>

        <Button
            android:id="@+id/fpassSignUp"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/registerSignUp"
            android:layout_marginTop="16dp"
            android:text="Forgot Password?"
            android:textColor="@color/gray"
            android:background="@drawable/btn_shape"/>
        <Button
            android:id="@+id/stsignInSignUp"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:text="Skip To Sign In"
            android:layout_below="@+id/fpassSignUp"
            android:layout_marginTop="16dp"
            android:textColor="@color/gray"
            android:background="@drawable/btn_shape" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>