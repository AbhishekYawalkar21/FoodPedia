<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPassword"
    android:background="@drawable/mainbg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logosResetPass"
            android:layout_width="149dp"
            android:layout_height="123dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@mipmap/recipe" />

        <TextView
            android:id="@+id/tvfpResetPass"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/logosResetPass"
            android:layout_marginTop="40dp"
            android:text="Forgot Password?"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/etemailResetPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvfpResetPass"
            android:layout_marginTop="60dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_mail_outline_black_24dp"
            android:maxLines="1" />

        <Button
            android:id="@+id/rpResetPass"
            android:layout_width="220dp"
            android:layout_centerHorizontal="true"
            android:layout_height="40dp"
            android:layout_below="@+id/etemailResetPass"
            android:layout_marginTop="50dp"
            android:text="Reset Password"
            android:background="@drawable/btn_shape"
            android:textColor="@color/gray"/>

        <Button
            android:id="@+id/backResetPass"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/rpResetPass"
            android:layout_marginTop="20dp"
            android:text="Back"
            android:textColor="@color/gray"
            android:background="@drawable/btn_shape"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>